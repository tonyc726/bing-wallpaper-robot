{
  "name": "bing-wallpaper-robot",
  "version": "3.0.0",
  "description": "",
  "private": false,
  "scripts": {
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:generate -p -n",
    "migration:run": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:run",
    "run-migration": "node --require ts-node/register ./src/tyorm-run-migration.ts",
    "migration:revert": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:revert",
    "fetch-data": "node --require ts-node/register ./src/index.ts",
    "make-html": "node --require ts-node/register ./src/makePreviewHTML",
    "start": "pnpm run fetch-data && pnpm run make-html",
    "lint": "eslint src --ext .ts --quiet",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"**/*.md\" \"**/*.json\" && autopep8 --in-place --recursive --aggressive --aggressive src/getImageHash.py src/getImageDominantColor.py",
    "format:check": "prettier --check \"src/**/*.ts\" \"**/*.md\" \"**/*.json\"",
    "format:lint": "pnpm run format && pnpm run lint"
  },
  "keywords": [],
  "author": "tonyc726<zhujf620@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "dotenv": "^17.0.0",
    "eslint": "^8.7.0",
    "eslint-config-alloy": "^5.1.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@types/ejs": "^3.1.0",
    "@types/lodash": "^4.14.178",
    "date-fns": "^2.30.0",
    "ejs": "^3.1.6",
    "file-type": "^18.0.0",
    "html-minifier": "^4.0.0",
    "imagekit": "^4.0.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.0",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.0"
  }
}
